<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorButton">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:id="@+id/accImg"
        app:shapeAppearanceOverlay="@style/Circular"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Welcome,   "
        android:textSize="30dp"
        android:textColor="@color/colorBasic"
        android:fontFamily="@font/robotobold"
        android:layout_marginRight="60dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:background="@drawable/custom_button"
        android:orientation="vertical"
        android:gravity="center"

        >

    <TextView
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:fontFamily="@font/robotomedium"
        android:id="@+id/username"/>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Daftar"
                android:background="@drawable/custom_button3"
                android:fontFamily="@font/robotobold"
                android:id="@+id/registerMember">

            </Button>

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="LogOut"
                android:layout_marginLeft="50dp"
                android:background="@drawable/custom_button2"
                android:fontFamily="@font/robotobold"
                android:id="@+id/logout">
            </Button>




        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_button"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginLeft="30dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/locationlogo"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:gravity="top"
            android:layout_gravity="top"
            android:text="Location"

            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp" />

        </LinearLayout>


        <TextView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:text="Masukkan kode verivikasi member"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="*Kode didapat setelah mendaftar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/kode"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/colorButton"
            android:gravity="center"
            android:hint="Kode"
            android:textAlignment="center"
            android:textColorHint="@color/colorBasic" />

        <Button
            android:id="@+id/verivBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="verifikasi"
            />


    </LinearLayout>

</LinearLayout>